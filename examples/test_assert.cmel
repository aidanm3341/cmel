import suite, test, run, assert from "stdlib/test";

suite("Assert function", fun() {
    test("should pass with true condition", fun() {
        assert(5 > 3, "Five should be greater than three");
    });

    test("should fail with false condition and custom message", fun() {
        assert(false, "This is a custom failure message");
    });

    test("should fail with default message", fun() {
        assert(1 > 10);
    });

    test("should continue after assertion failure", fun() {
        assert(true, "This test runs after failures");
    });
});

run();
