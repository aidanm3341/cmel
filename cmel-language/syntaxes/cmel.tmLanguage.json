{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Cmel",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#function-declaration"
		},
		{
			"include": "#function-call"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.cmel",
					"match": "//.*$"
				},
				{
					"name": "comment.block.cmel",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"function-declaration": {
			"patterns": [
				{
					"comment": "Named function declaration",
					"match": "\\b(fun)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
					"captures": {
						"1": {
							"name": "keyword.control.cmel"
						},
						"2": {
							"name": "entity.name.function.declaration.cmel"
						}
					}
				},
				{
					"comment": "Anonymous function / lambda",
					"match": "\\b(fun)\\s*\\(",
					"captures": {
						"1": {
							"name": "keyword.control.cmel"
						}
					}
				}
			]
		},
		"function-call": {
			"patterns": [
				{
					"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
					"captures": {
						"1": {
							"name": "support.function.cmel"
						}
					}
				}
			]
		},
		"keywords": {
			"patterns": [
                {
                    "name": "keyword.control.flow.cmel",
                    "match": "\\b(if|else|while|for|return|break)\\b"
                },
                {
                    "name": "storage.type.cmel",
                    "match": "\\b(var|const)\\b"
                },
                {
                    "name": "keyword.control.import.cmel",
                    "match": "\\b(import|export|from)\\b"
                },
                {
                    "name": "keyword.operator.logical.cmel",
                    "match": "\\b(and|or|not)\\b"
                },
                {
                    "name": "support.function.builtin.cmel",
                    "match": "\\b(print|clock|input|readFile|number)\\b"
                },
                {
                    "name": "storage.type.class.cmel",
                    "match": "\\b(class)\\b"
                },
                {
                    "name": "variable.language.cmel",
                    "match": "\\b(this|super)\\b"
                }
            ]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.boolean.cmel",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "constant.language.null.cmel",
					"match": "\\b(nil)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.cmel",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cmel",
					"match": "\\\\[ntr\"\\\\e]"
				},
				{
					"name": "invalid.illegal.escape.cmel",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.cmel",
			"match": "\\b[0-9]+(\\.[0-9]+)?\\b"
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.arithmetic.cmel",
					"match": "[+\\-*/%]"
				},
				{
					"name": "keyword.operator.comparison.cmel",
					"match": "(==|!=|<=|>=|<|>)"
				},
				{
					"name": "keyword.operator.assignment.cmel",
					"match": "="
				},
				{
					"name": "keyword.operator.logical.cmel",
					"match": "!"
				}
			]
		}
	},
	"scopeName": "source.cmel"
}